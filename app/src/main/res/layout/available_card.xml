<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        android:layout_margin="10dp"
        app:contentPadding="10dp">

        <RelativeLayout
            android:id="@+id/yo"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/ava"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class Available"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/cardview_light_background"/>
            <TextView
                android:id="@+id/classCardTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:30 - 12:30 pm"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/cardview_light_background"
                android:layout_below="@+id/ava"/>

            <TextView
                android:id="@+id/classCardSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class"
                android:layout_below="@+id/classCardTime"
                android:textColor="@color/cardview_light_background"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/classCardRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/classCardSubject"
                android:textColor="@color/cardview_light_background"
                android:text="room" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>